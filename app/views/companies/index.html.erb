<p id="notice"><%= notice %></p>
<br><br>
<div class="container">
  <center><h1>Company Directory</h1></center>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Description</th>
      <th>Service</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= image_tag company.logo %></td>
        <td><%= company.name %></td>
        <td><%= number_to_phone company.phone %></td>
        <td><%= company.description %></td>
        <td><%= company.service %></td>
        <td><%= link_to 'Show', company, :class =>"btn btn-sm btn-info" %> <%= link_to 'Edit', edit_company_path(company), :class =>"btn btn-sm btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<center><%= link_to 'New Company', new_company_path, :class => "btn btn-default" %></center>
