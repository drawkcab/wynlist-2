<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Description</th>
      <th>Service</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.phone %></td>
        <td><%= company.description %></td>
        <td><%= company.service %></td>
        <td><%= link_to 'Show', company, :class =>"btn btn-sm btn-info" %> <%= link_to 'Edit', edit_company_path(company), :class =>"btn btn-sm btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Company', new_company_path, :class => "btn btn-default" %>
