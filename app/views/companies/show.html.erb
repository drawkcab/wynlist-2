  <br>
  Added on: <%= time_ago_in_words(review.created_at) %> ago
  </p>
<% end %>
  <h3>New Review</h3>


  <%= image_tag @company.reviews.average(:stars).to_i.to_s+"star.png"%>
  <%=  "("+@company.reviews.count.to_s+")"%>

  <%= render 'reviews/form' %>


