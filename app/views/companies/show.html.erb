<!DOCTYPE html>
<html lang="en">
    <!-- Page Content -->
    <div class="col-md-12 text-center"><%= @company.name %></div>
    <div class="container">

        <div class="row">

            <div class="col-md-3 text-center">
                <p class="lead">Company Location</p>
                <table class="table">
                    <a href="#" class="list-group-item"><%= @company.street %> </a>
                    <a href="#" class="list-group-item"><%= @company.zip %> </a>
                    <a href="#" class="list-group-item"><%= @company.city %> , <%= @company.state %> </a>
                </table>
            </div>

            <div class="col-md-9">
              <div id="myCarousel" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner" role="listbox">
              <div class="item active">
              <img class="first-slide" src="http://i.imgur.com/EExrIfI.jpg" alt="background">
              <div class="container">
              <div class="carousel-caption">
              <h1><%= image_tag @company.logo %></h1>
            </div>
          </div>
        </div>
    </div>

                <div class="well">
                  <h3>Company Description</h3>
                  <p><%= @company.description %></p>

                  <center><h3>Company Reviews</h3></center>
                  <hr>

<% @company.reviews.each do |review| %>
  <%= image_tag review.show_stars %>
  <p>
  <strong><%= review.coment %></strong>
  <br>
  Added on: <%= time_ago_in_words(review.created_at) %>
  </p>
<% end %>
  <h3>New Review</h3>


  <%= image_tag @company.reviews.average(:stars).to_i.to_s+"star.png"%>
  <%=  "("+@company.reviews.count.to_s+")"%>

  <%= render 'reviews/form' %>


    </div>

    </div>

